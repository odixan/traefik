# Pi-hole Environment Configuration
# Copy this to your main .env file or create a separate pihole.env

# Pi-hole Configuration
PIHOLE_PASSWORD=your_secure_admin_password_here
PIHOLE_SERVER_IP=192.168.1.100  # Your server's IP address

# Timezone (optional)
TZ=Europe/Madrid

# Production settings (add to main .env for production)
# DOMAIN=yourdomain.com
# EMAIL=your-email@yourdomain.com

# Advanced Pi-hole Settings (optional)
# PIHOLE_SKIP_OS_CHECK=true
# PIHOLE_INSTALL_WEB_INTERFACE=true
# PIHOLE_INSTALL_WEB_SERVER=true

# DNS Settings
# PIHOLE_DNS_1=1.1.1.1
# PIHOLE_DNS_2=8.8.8.8

# Network Settings
# PIHOLE_INTERFACE=eth0
# PIHOLE_IPV6=true

# Logging
# PIHOLE_QUERY_LOGGING=true
